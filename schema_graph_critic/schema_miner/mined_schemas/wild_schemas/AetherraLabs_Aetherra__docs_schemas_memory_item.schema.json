{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aetherra.dev/schemas/memory_item.schema.json",
    "title": "Aetherra Memory Item",
    "type": "object",
    "required": [
        "id",
        "type",
        "title",
        "body",
        "tags",
        "source",
        "created_at",
        "confidence"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "knowledge",
                "episode",
                "procedure",
                "self",
                "note"
            ]
        },
        "title": {
            "type": "string"
        },
        "body": {
            "type": "string"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "source": {
            "type": "string"
        },
        "created_at": {
            "type": "string"
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "embedding_model": {
            "type": "string"
        },
        "embedding_dim": {
            "type": "integer"
        },
        "hash": {
            "type": "string"
        }
    },
    "additionalProperties": true
}
