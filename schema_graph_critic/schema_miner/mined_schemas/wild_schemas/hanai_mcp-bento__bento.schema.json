{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/hanai/mcp-bento/refs/heads/main/bento.schema.json",
  "title": "Config",
  "description": "json config file for mcp-bento",
  "type": "object",
  "required": [
    "listen",
    "mcpServers",
    "profiles"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "listen": {
      "type": "string",
      "pattern": "^[\\w.-]+:\\d+$"
    },
    "mcpServers": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "required": [
              "type",
              "url"
            ],
            "properties": {
              "type": {
                "const": "http"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "headers": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": [
              "type",
              "command"
            ],
            "properties": {
              "type": {
                "const": "stdio"
              },
              "command": {
                "type": "string",
                "minLength": 1
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        ]
      }
    },
    "profiles": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "tools": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "prompts": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "prefix": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "boolean",
                  "enum": [
                    false
                  ]
                }
              ]
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}