{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/equinor/neqsim-parameterfitting/schemas/heat-capacity-schema.json",
  "title": "Heat Capacity Experimental Data Schema",
  "description": "Schema for heat capacity (Cp, Cv) experimental data files",
  "type": "object",
  "required_columns": [
    {
      "name": "id",
      "type": "integer",
      "required": true,
      "description": "Unique row identifier"
    },
    {
      "name": "component_1",
      "type": "string",
      "required": true,
      "description": "Primary component name"
    },
    {
      "name": "temperature_K",
      "type": "float",
      "required": true,
      "unit": "K",
      "description": "Temperature in Kelvin"
    },
    {
      "name": "pressure_bar",
      "type": "float",
      "required": true,
      "unit": "bar",
      "description": "Pressure in bar"
    },
    {
      "name": "reference",
      "type": "string",
      "required": true,
      "description": "Literature reference"
    }
  ],
  "value_columns_one_required": [
    {
      "name": "cp_J_molK",
      "type": "float",
      "unit": "J/(mol路K)",
      "description": "Molar isobaric heat capacity"
    },
    {
      "name": "cv_J_molK",
      "type": "float",
      "unit": "J/(mol路K)",
      "description": "Molar isochoric heat capacity"
    },
    {
      "name": "cp_J_kgK",
      "type": "float",
      "unit": "J/(kg路K)",
      "description": "Specific isobaric heat capacity"
    },
    {
      "name": "cv_J_kgK",
      "type": "float",
      "unit": "J/(kg路K)",
      "description": "Specific isochoric heat capacity"
    }
  ],
  "optional_columns": [
    {
      "name": "component_2",
      "type": "string",
      "required": false,
      "description": "Secondary component for mixtures"
    },
    {
      "name": "x1",
      "type": "float",
      "required": false,
      "unit": "mol/mol",
      "description": "Mole fraction of component 1"
    },
    {
      "name": "uncertainty",
      "type": "float",
      "required": false,
      "description": "Absolute uncertainty"
    },
    {
      "name": "uncertainty_percent",
      "type": "float",
      "required": false,
      "unit": "%",
      "description": "Relative uncertainty percentage"
    },
    {
      "name": "phase",
      "type": "string",
      "required": false,
      "enum": ["liquid", "vapor", "gas", "supercritical", "solid"],
      "description": "Phase of the measurement"
    },
    {
      "name": "quality_flag",
      "type": "string",
      "required": false,
      "enum": ["A", "B", "C"],
      "description": "Data quality rating"
    },
    {
      "name": "doi",
      "type": "string",
      "required": false,
      "description": "DOI of source publication"
    },
    {
      "name": "notes",
      "type": "string",
      "required": false,
      "description": "Additional notes"
    }
  ],
  "validation_rules": {
    "temperature_K": {
      "minimum": 0,
      "maximum": 2000
    },
    "pressure_bar": {
      "minimum": 0,
      "maximum": 10000
    },
    "cp_J_molK": {
      "minimum": 0,
      "maximum": 10000
    },
    "cv_J_molK": {
      "minimum": 0,
      "maximum": 10000
    },
    "x1": {
      "minimum": 0,
      "maximum": 1
    }
  }
}
