{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://waif.ai/schemas/ooda-scheduler.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["jobs"],
  "properties": {
    "jobs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "command", "schedule"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9-_]+$" },
          "name": { "type": "string" },
          "command": { "type": "string", "minLength": 1 },
          "schedule": { "type": "string" },
          "cwd": { "type": "string" },
          "env": {
            "type": "object",
            "patternProperties": { ".*": { "type": "string" } },
            "additionalProperties": false
          },
          "capture": {
            "type": "array",
            "items": { "type": "string", "enum": ["stdout", "stderr"] },
            "minItems": 1,
            "uniqueItems": true
          },
          "redact": { "type": "boolean" },
          "timeout_seconds": { "type": "integer", "minimum": 1 },
          "retention": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "keep_last": { "type": "integer", "minimum": 1 }
            }
          },
          "clear_terminal": { "type": "boolean", "default": false },
          "catchup_on_start": { "type": "boolean", "default": false }
          }

      }
    }
  }
}
