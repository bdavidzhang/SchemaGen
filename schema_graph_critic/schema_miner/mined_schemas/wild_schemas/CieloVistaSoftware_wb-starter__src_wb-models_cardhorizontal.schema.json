{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cardhorizontal.schema.json",
  "title": "Horizontal Card",
  "description": "Card with horizontal layout - image on side, content on other",
  "behavior": "cardhorizontal",
  "baseClass": "wb-card-horizontal",
  "semanticElement": {
    "tagName": "article",
    "implicitRole": "article"
  },
  "compliance": {
    "baseClass": "wb-card-horizontal",
    "supportLevel": "stable",
    "accessibility": "high"
  },
  "properties": {
    "image": {
      "type": "string",
      "description": "Image URL"
    },
    "imageAlt": {
      "type": "string",
      "description": "Image alt text",
      "default": ""
    },
    "imagePosition": {
      "type": "string",
      "description": "Image position",
      "enum": [
        "left",
        "right"
      ],
      "default": "left",
      "appliesClass": "wb-card-horizontal--image-{{value}}"
    },
    "imageWidth": {
      "type": "string",
      "description": "Image width (CSS value)",
      "default": "40%"
    },
    "title": {
      "type": "string",
      "description": "Card title"
    },
    "subtitle": {
      "type": "string",
      "description": "Card subtitle"
    },
    "variant": {
      "type": "string",
      "description": "Visual style variant",
      "enum": [
        "default",
        "elevated",
        "bordered",
        "minimal"
      ],
      "default": "default",
      "appliesClass": "wb-card-horizontal--{{value}}"
    }
  },
  "$view": [
    {
      "name": "figure",
      "tag": "figure",
      "public": true,
      "createdWhen": "image",
      "description": "Image container"
    },
    {
      "name": "image",
      "tag": "img",
      "parent": "figure",
      "public": true,
      "createdWhen": "image",
      "description": "Card image"
    },
    {
      "name": "content",
      "tag": "div",
      "public": true,
      "required": true,
      "description": "Content container"
    },
    {
      "name": "title",
      "tag": "h3",
      "parent": "content",
      "public": true,
      "content": "{{title}}",
      "createdWhen": "title",
      "description": "Card title"
    },
    {
      "name": "subtitle",
      "tag": "p",
      "parent": "content",
      "public": true,
      "content": "{{subtitle}}",
      "createdWhen": "subtitle",
      "description": "Card subtitle"
    },
    {
      "name": "body",
      "tag": "div",
      "parent": "content",
      "public": true,
      "content": "<slot></slot>",
      "createdWhen": "body",
      "description": "Additional content slot"
    }
  ],
  "$methods": {
    "show": {
      "description": "Shows the card",
      "params": []
    },
    "hide": {
      "description": "Hides the card",
      "params": []
    },
    "toggle": {
      "description": "Toggles visibility",
      "params": []
    },
    "setImage": {
      "description": "Changes the image",
      "params": [
        "src",
        "alt"
      ]
    }
  },
  "$cssAPI": {
    "--wb-card-horizontal-gap": {
      "default": "1rem",
      "description": "Gap between image and content"
    },
    "--wb-card-horizontal-radius": {
      "default": "8px",
      "description": "Border radius"
    },
    "--wb-card-horizontal-bg": {
      "default": "var(--bg-surface, #ffffff)",
      "description": "Background"
    },
    "--wb-card-horizontal-border": {
      "default": "none",
      "description": "Border"
    },
    "--wb-card-horizontal-shadow": {
      "default": "none",
      "description": "Box shadow"
    },
    "--wb-card-horizontal-image-width": {
      "default": "40%",
      "description": "Image width"
    },
    "--wb-card-horizontal-image-radius": {
      "default": "8px 0 0 8px",
      "description": "Image border radius"
    },
    "--wb-card-horizontal-content-padding": {
      "default": "1rem",
      "description": "Content padding"
    },
    "--wb-card-horizontal-title-size": {
      "default": "1.125rem",
      "description": "Title font size"
    },
    "--wb-card-horizontal-title-weight": {
      "default": "600",
      "description": "Title font weight"
    },
    "--wb-card-horizontal-subtitle-size": {
      "default": "0.875rem",
      "description": "Subtitle font size"
    },
    "--wb-card-horizontal-subtitle-color": {
      "default": "var(--text-secondary, #666)",
      "description": "Subtitle color"
    }
  },
  "test": {
    "setup": [
      "<wb-cardhorizontal>Basic cardhorizontal content</wb-cardhorizontal>",
      "<wb-cardhorizontal image-position=\"left\">imagePosition=left</wb-cardhorizontal>",
      "<wb-cardhorizontal image-position=\"right\">imagePosition=right</wb-cardhorizontal>",
      "<wb-cardhorizontal variant=\"default\">variant=default</wb-cardhorizontal>",
      "<wb-cardhorizontal variant=\"elevated\">variant=elevated</wb-cardhorizontal>",
      "<wb-cardhorizontal variant=\"bordered\">variant=bordered</wb-cardhorizontal>",
      "<wb-cardhorizontal image=\"Sample image\">image=\"Sample image\"</wb-cardhorizontal>",
      "<wb-cardhorizontal image-alt=\"Sample imageAlt\">imageAlt=\"Sample imageAlt\"</wb-cardhorizontal>",
      "<wb-cardhorizontal title=\"Test Title\">With title attribute</wb-cardhorizontal>",
      "<wb-card-horizontal image=\"photo.jpg\" title=\"Title\"></wb-card-horizontal>"
    ],
    "matrix": {
      "combinations": [
        {
          "image": "photo.jpg",
          "title": "Title"
        },
        {
          "image": "photo.jpg",
          "title": "Title",
          "subtitle": "Subtitle"
        },
        {
          "image": "photo.jpg",
          "title": "Title",
          "imagePosition": "right"
        },
        {
          "image": "photo.jpg",
          "title": "Title",
          "variant": "elevated"
        }
      ]
    }
  },
  "_metadata": {
    "category": "cards",
    "icon": "↔️",
    "since": "1.0.0",
    "status": "stable"
  }
}