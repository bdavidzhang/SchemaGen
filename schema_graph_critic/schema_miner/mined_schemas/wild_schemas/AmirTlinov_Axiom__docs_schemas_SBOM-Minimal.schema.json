{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AX SBOM v1 (minimal)",
  "type": "object",
  "required": [
    "version",
    "components"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "version",
          "hash",
          "license"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          },
          "license": {
            "type": "string"
          }
        }
      }
    }
  }
}
