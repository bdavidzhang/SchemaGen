{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Profile",
  "description": "Schema for user profile data",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique user identifier"
    },
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "pattern": "^[a-zA-Z0-9_]+$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "profile": {
      "$ref": "#/definitions/Profile"
    },
    "settings": {
      "$ref": "#/definitions/Settings"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "username", "email"],
  "definitions": {
    "Profile": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "maxLength": 100
        },
        "lastName": {
          "type": "string",
          "maxLength": 100
        },
        "bio": {
          "type": "string",
          "maxLength": 500
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        },
        "socialLinks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SocialLink"
          },
          "maxItems": 10
        }
      }
    },
    "SocialLink": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string",
          "enum": ["twitter", "github", "linkedin", "website"]
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["platform", "url"]
    },
    "Settings": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "system"]
        },
        "notifications": {
          "type": "object",
          "properties": {
            "email": {"type": "boolean"},
            "push": {"type": "boolean"},
            "sms": {"type": "boolean"}
          }
        },
        "privacy": {
          "type": "object",
          "properties": {
            "profileVisible": {"type": "boolean"},
            "showEmail": {"type": "boolean"}
          }
        }
      }
    }
  }
}
